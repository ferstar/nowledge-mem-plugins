# Nowledge Mem Configuration
# Copy to .env and fill in your values

# API endpoint URL
NOWLEDGE_MEM_API_URL=http://localhost:14243

# Optional: Bearer token for authentication (omit header if empty)
NOWLEDGE_MEM_AUTH_TOKEN=

# Optional: Request timeout in seconds (default: 30)
NOWLEDGE_MEM_TIMEOUT=30

# Optional: Health check timeout in seconds (default: 5)
NOWLEDGE_MEM_TIMEOUT_HEALTH=5

# Optional: Maximum messages to extract for persist (0 = unlimited)
NOWLEDGE_MEM_MAX_MESSAGES=0

# Optional: Session source for persist (auto/claude/codex)
NOWLEDGE_MEM_SESSION_SOURCE=auto
